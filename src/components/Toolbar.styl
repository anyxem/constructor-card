.toolbar
  background-color #efefef
  height 45px
  border-radius 5px
  width 100%
  padding 5px 8px
  margin-bottom 18px

  .button
    height 35px
    width 26px
    display inline-block
    vertical-align top
    line-height 35px
    border-radius 6px
    overflow hidden
    text-align center
    cursor pointer
    position relative
    &:before
      background-image url(/assets/toolbar/button_bg.png)
      background-position top left
      background-repeat no-repeat
      bottom 0
      right 4px
      content ''
      position absolute
      top 0
      left 0
    &:after
      background-image url(/assets/toolbar/button_bg.png)
      background-position top right
      background-repeat no-repeat
      height 35px
      width 4px
      content ''
      position absolute
      top 0
      right 0
    &.pressed
      background-color #cacaca

    &.insert
      width 36px
      margin-right 5px

    i
      position absolute
      width 30px
      height 30px
      top 50%
      left 50%
      margin-top -15px
      margin-left -15px
      background-repeat no-repeat
      background-position 50% 50%

    &.insert_text
      i
        background-image url(/assets/toolbar/insert_text.png)

    &.insert_image
      i
        background-image url(/assets/toolbar/insert_image.png)

    &.insert_qr
      i
        background-image url(/assets/toolbar/insert_qr.png)

    &.insert_map
      i
        background-image url(/assets/toolbar/insert_map.png)

    &.align_left
      i
        background-image url(/assets/toolbar/align_left.png)
    &.align_center
      i
        background-image url(/assets/toolbar/align_center.png)
    &.align_right
      i
        background-image url(/assets/toolbar/align_right.png)
    &.bold
      i
        background-image url(/assets/toolbar/bold.png)
    &.italic
      i
        background-image url(/assets/toolbar/italic.png)
    &.underline
      i
        background-image url(/assets/toolbar/underline.png)

  select
    height 35px
    background-color #f5f5f5
    border 1px solid #ffffff
    border-radius 4px

    &.font-select
      width 120px
    &.fontsize-select
      width: 36px;
      margin-left: 7px;

  .divider
    display inline-block
    width 20px
