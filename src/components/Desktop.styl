.desktop
  width 670px
  height 700px
  float left
  margin-bottom 20px
  background-color #f5f5f5
  position relative
  background-repeat no-repeat
  -webkit-user-select: none;  /* Chrome all / Safari all */
  -moz-user-select: none;     /* Firefox all */
  -ms-user-select: none;      /* IE 10+ */
  user-select: none;

  i
    &.side-l
      background-image url(/assets/desktop/side-l.png)
      width 72px
      height 100%
      display block
      position absolute
      left -72px
    &.side-r
      background-image url(/assets/desktop/side-r.png)
      width 72px
      height 100%
      display block
      position absolute
      right -72px
    &.side-b1
      background-image url(/assets/desktop/side-b.png)
      background-position top left
      width 100%
      height 66px
      display block
      position absolute
      bottom -66px
      left -72px
    &.side-b2
      background-image url(/assets/desktop/side-b.png)
      background-position top right
      width 80%
      height 66px
      display block
      position absolute
      bottom -66px
      right -83px

  &.dev
    background-color #fff
    i
      display none


  .workarea
    border 2px solid #e31e24
    position absolute
    top 10px
    bottom 10px
    left 10px
    right 10px


/* ------------ Boxes ------------ */

.box-text
  border 1px dashed #dadada
  overflow hidden
  .new &
  .order &
    border none!important
  &.focus
    border 1px solid #dadada

.box-image
  border 1px dashed #dadada
  overflow hidden
  img
    width 100%
    height 100%
    pointer-events: none

  &.focus
    border 1px solid #dadada

.box-qr
  border 1px dashed #dadada
  overflow hidden
  img
    width 100%
    height 100%
    pointer-events: none

  &.focus
    border 1px solid #dadada
